{
    "extends": "eslint:recommended",
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jquery": true,
      "jest": true
    },
    "rules": {
      "quotes": [2, "single", {"allowTemplateLiterals": true}],
      "curly": [2, "all"],
      "semi": [
        2,
        "always"
      ],
      "eol-last": 0,
      "no-alert": 1,
      "no-console": 1,
      "no-debugger": 2,
      "no-empty": [2, {"allowEmptyCatch": true}],
      "no-eval": 2,
      "no-lone-blocks": 0,
      "no-multi-str": 2,
      "no-trailing-spaces": 0,
      "no-unused-vars": 0,
      "no-underscore-dangle": 0,
      "no-var": 1,
      "no-with": 2,
  
      "array-bracket-spacing": [2, "always", {"singleValue": false}],
      "brace-style": [2, "1tbs", {"allowSingleLine": true}],
      "camelcase": [2, {"properties": "never"}],
      "comma-dangle": [2, "never"],
      "comma-spacing": [2, {"before": false, "after": true}],
      "comma-style": [2, "last"],
      "consistent-this": [2, "self"],
      "func-call-spacing": [2,"never"],
      "func-names": "off",
      "indent": [2, 2, {"SwitchCase": 1, "VariableDeclarator": {"var": 2, "let": 2, "const": 3}, "MemberExpression": 1}],
      "key-spacing": [2, {"afterColon": true, "mode": "strict"}],
      "keyword-spacing": [2, {"before": true, "after": true}],
      "linebreak-style": [2, "unix"],
      "lines-around-comment": [2, {"beforeBlockComment": true, "afterBlockComment": true, "beforeLineComment": true, "afterLineComment": false}],
      "max-len": ["warn", 960],
      "no-mixed-spaces-and-tabs": 2,
      "no-multiple-empty-lines": [2, {"max": 2, "maxEOF": 1, "maxBOF": 1}],
      "no-restricted-syntax": [2,"WithStatement"],
      "one-var": "off",
      "quote-props": [2, "as-needed"],
      "semi-spacing": [2, {"before": false, "after": true}],
      "space-before-blocks": [2, "always"],
      "space-before-function-paren": "off",
      "space-in-parens": [2, "never"],
      "space-infix-ops": [2, {"int32Hint": false}],
      "space-unary-ops": [2, {"words": true, "nonwords": false}],
      "spaced-comment": [2, "always", {"exceptions": ["*","-"]}],
  
      "wrap-iife": [2, "any"],
      "yoda": [2, "never"],
  
      "jsx-quotes": 1,
  
      // React rules
      "react/display-name": [
        1,
        {
          "ignoreTranspilerName": false
        }
      ],
      "react/forbid-prop-types": [
        1,
        {
          "forbid": [
            "any"
          ]
        }
      ],
      "react/jsx-boolean-value": 1,
      "react/jsx-closing-bracket-location": 0,
      "react/jsx-curly-spacing": 1,
      "react/jsx-indent-props": 0,
      "react/jsx-key": 2,
      "react/jsx-max-props-per-line": 0,
      "react/jsx-no-bind": 1,
      "react/jsx-no-duplicate-props": 1,
      "react/jsx-no-literals": 0,
      "react/jsx-no-undef": 1,
      "react/jsx-pascal-case": 1,
      "react/jsx-sort-prop-types": 0,
      "react/jsx-sort-props": 0,
      "react/jsx-uses-react": 1,
      "react/jsx-uses-vars": 1,
      "react/no-danger": 0,
      "react/no-did-mount-set-state": 0,
      "react/no-did-update-set-state": 1,
      "react/no-direct-mutation-state": 1,
      "react/no-multi-comp": 1,
      "react/no-set-state": 0,
      "react/no-unknown-property": 1,
      "react/prefer-es6-class": 1,
      "react/prop-types": 1,
      "react/react-in-jsx-scope": 1,
      "react/require-extension": 0,
      "react/self-closing-comp": 1,
      "react/sort-comp": 1,
      "react/wrap-multilines": 0
    }
}